<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management Landing Page</title>
  <link rel="stylesheet" href="/styles/style.css">
</head>

<body>

  <!-- Navigation -->
  <nav class="navbar">
    <a href="/" class="home-link">â† Home</a>
    <h2>User Management</h2>
  </nav>

  <!-- Main Container -->
  <div class="container">

    <h1 class="title">All Users</h1>

    <div class="card-wrapper">
      <% if(users.length> 0) { %>
        <% users.forEach(function(user) { %>
          <div class="user-card">
            <img src="<%= user.Image %>" alt="User Photo">
            <h3>
              <%= user.name %>
            </h3>
            <p>Email: <%= user.email %>
            </p>

            <div class="buttons">
              <button class="edit-btn"><a href="/edit/<%= user._id %>">Edit User</a></button>
              <button class="delete-btn"><a href="/delete/<%= user._id %>">Delete User</a></button>
            </div>
          </div>
          <% }); %>
            <% } else { %>
              <p>No users found.</p>

              <% } %>
    </div>

  </div>

</body>

</html>